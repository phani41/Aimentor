{
  "manifest_version": 3,
  "name": "AiMentor - Coding Assistant",
  "version": "1.0.0",
  "description": "AI-powered coding mentor for DSA problems with hints and solutions",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_title": "AiMentor"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*", "https://www.hackerrank.com/*", "https://codeforces.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
